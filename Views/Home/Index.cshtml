@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
    if (Model.User.UserName!=null)
    {

        Layout = "_LoggedinLayout";

    }
}

@section stylesheets{
    <link rel="stylesheet" href="~/css/index.css">
}
<div class="banner-image overlay w-100 vh-100 d-flex align-items-center">
    <div class="content text-start text-home container">
        <h1 id="EventName" class="text-white">@Model.Event.EventName</h1>
        <h4>@Model.Event.EventEnd | @@@Model.Event.EventLocation</h4><br><br>
        <div class="20day">
            <h5>
                @{

                    var days = Model.Event.Days;
                    var rev = 0;
                    var count = 0;
                    while (days > 0)
                    {
                        int digit = days % 10;
                        rev = rev * 10 + digit;
                        days /= 10;
                        count++;
                    }
                }
                @while (rev > 0)
                {
                    int num = rev % 10;
                    <span> @num </span>
                    rev /= 10;
                    count--;
                }
                @while (count-- > 0)
                {
                    <span> 0 </span>
                }
                days left
            </h5>
        </div><br><br><br>
        <a target="_blank" href="https://wa.me/6285156615076?text=Halo%20Saya%20Ingin%20Bertanya%20Mengenai%20FESTGLORY">Contact Us</a>
    </div>
</div>
